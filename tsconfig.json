{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2015",
      "es2017"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    // "jsx": "preserve",
    "removeComments": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "components/*": [
        "src/app/*"
      ],
    }
  },
  "include": [
    "src"
  ]
}
